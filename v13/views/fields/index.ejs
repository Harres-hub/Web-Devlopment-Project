<%- include("../partials/header") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpField!</h1>
			<p>View our hand-picked fields from all over the world!</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/fields/new">Add New Field</a>
			</p>
		</div>
	</header>
	<div class="row">
		<div class="col-lg-12">
			<h3>Our Most Popular Fields</h3>
		</div>
	</div>
	<div class="row text-center" style="display:flex flex-wrap:wrap">
		<% fields.forEach(function(field){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= field.image %>">
					<div class="caption">
						<h4><%= field.name %></h4>
					</div>
					<p>
						<a href="/fields/<%= field._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<% }) %>
	</div>
	
</div>
<%- include("../partials/footer") %>